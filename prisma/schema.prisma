generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String?  @unique  // NOUVEAU
  password  String
  role      Role     @default(CONSULTANT)
  isActive  Boolean  @default(false)  // NOUVEAU
  activationToken String? // NOUVEAU
  objectifs Objectif[]
  commentaires Commentaire[]
}

model Categorie {
  id          Int        @id @default(autoincrement())
  nom         String     @unique
  description String?
  couleur     String?    // Pour l'affichage (ex: "#4f46e5")
  objectifs   Objectif[]
  createdAt   DateTime   @default(now())
}

model Objectif {
  id                Int           @id @default(autoincrement())
  description       String
  status            String        @default("En cours")
  validatedbyadmin  Boolean       @default(false)
  annee             Int
  categorieId       Int?          // NOUVEAU
  categorie         Categorie?    @relation(fields: [categorieId], references: [id])
  userid            Int
  user              User          @relation(fields: [userid], references: [id], onDelete: Cascade)
  commentaires      Commentaire[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model Commentaire {
  id         Int       @id @default(autoincrement())
  contenu    String
  createdAt  DateTime  @default(now())
  objectif    Objectif  @relation(fields: [objectifId], references: [id], onDelete: Cascade)
  objectifId Int
  user        User      @relation(fields: [userid], references: [id], onDelete: Cascade)
  userid     Int
}

enum Role {
  ADMIN
  CONSULTANT
}
